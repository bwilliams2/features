{
    "name": "ssh-mount",
    "id": "sshmount",
    "version": "0.0.8",
    "description": "Mounts the host's config directories into the container",
    "options": {},
    "mounts": [
        {
            "type": "bind",
            "source": "${localEnv:HOME}/.ssh",
            "target": "/mnt/.ssh,readonly"
        },
        {
            "type": "bind",
            "source": "${localEnv:HOME}/.aws",
            "target": "/mnt/.aws,readonly"
        },
        {
            "type": "bind",
            "source": "${localEnv:HOME}/.config/fish",
            "target": "/mnt/.config/fish,readonly"
        },
        {
            "type": "bind",
            "source": "${localEnv:HOME}/.claude/agents",
            "target": "/mnt/.claude/agents,readonly"
        },
        {
            "type": "bind",
            "source": "${localEnv:HOME}/.claude/commands",
            "target": "/mnt/.claude/commands,readonly"
        },
        {
            "type": "bind",
            "source": "${localEnv:HOME}/.claude/settings.json",
            "target": "/mnt/.claude/settings.json,readonly"
        },
        {
            "type": "bind",
            "source": "${localEnv:HOME}/.claude.json",
            "target": "/mnt/.claude.json,readonly"
        }
    ]
}
